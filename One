import java.awt.*;

public class One extends Number {
  
  private int xCoord;
  private int yCoord;
  private Color color = Color.BLACK;
  
  public One(){
    xCoord = (this.getX() + this.getWidth())/2 + this.getX();
    yCoord = (this.getY() + this.getHeight())/4 + this.getY();
  }
  
  //paint
  public void paintComponent(Graphics g){
    super.paintComponent();
    
    //draw the number 1
    g.setColor(color);
    g.drawLine(xCoord, yCoord, xCoord - 5, yCoord + 7);
    g.drawLine(xCoord, yCoord, xCoord, yCoord + this.getHeight()/2);
  }
  
  //value of this square
  public int getValue(){
    return 1;
  }
  
  //change color
  public void setColor(Color c){
    color = c;
  }
}
